<div class="col-md-8">
  <div class="row">
    <h2><%= @list.title %></h2>
    <%= @list.description %><br />
    <%= link_to "Delete To-Do List", @list, method: :delete %><br />
    <small><strong>Important: Items not completed in 7 days will expire and be removed from the To-Do List.</strong></small><br />
  </div>
  <div class="row">
    <%= render partial: 'items/item' %>
  </div>
</div>
<div class="col-md-4">
  <%= render partial: 'items/form', locals: { list: @list } %>
</div>
