  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
<div class="form-inline hidden-xs">
    <div class="form-group">
      <%= f.label :login, class: 'sr-only' %>
      <%= f.text_field :login, class: 'form-control', placeholder: "Email or username" %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: 'sr-only' %>
      <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "Password" %>
    </div>
    <div class="checkbox">
      <% if devise_mapping.rememberable? -%>
        <%= f.label :remember_me, class: 'checkbox' do %>
          <%= f.check_box :remember_me %> Remember me
        <% end %>
      <% end %>
    </div>
      <%= f.submit "Sign in", class: 'btn btn-default' %>
  <% end %>
</div>
<div class="visible-xs">
  <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-default" %>
</div>

