<!DOCTYPE html>
<html>
<head>
  <title>Blocitoff</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <div class="page-header">

      <div class="pull-right user-info">

        <% if current_user %>
          <%= link_to authenticated_root_path, class: 'btn btn-default btn-sm' do %>
            <span class="glyphicon glyphicon-home"></span>
          <% end %>
          <%= link_to edit_user_registration_path, class: 'btn btn-default btn-sm' do %>
            <span class="glyphicon glyphicon-user"></span>
          <% end %>

          <%= link_to destroy_user_session_path, method: :delete, class: 'btn btn-danger btn-sm' do %>
            <span class="glyphicon glyphicon-log-out"></span>
          <% end %>
        <% else %>
          <%= render partial: 'devise/sessions/new' %>
        <% end %>

      </div>
      <h2>Blocitoff</h2>
    </div>

    <% if flash[:notice] %>
      <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:notice] %>
      </div>
    <% elsif flash[:error] %>
      <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:error] %>
      </div>
    <% elsif flash[:alert] %>
      <div class="alert alert-warning">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:alert] %>
      </div>
    <% end %>
    <div class="row main-content">

      <%= yield %>

    </div>
  </div>
</body>
</html>
